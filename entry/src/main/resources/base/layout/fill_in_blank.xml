<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:root"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:btnBack"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:align_parent_left="true"
        ohos:text="$string:button_back"
        ohos:text_size="19fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="0vp"
        ohos:bottom_padding="8vp"
        ohos:end_padding="70vp"
        ohos:start_padding="0vp"
        ohos:center_in_parent="true"
        ohos:margin="5vp"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <ProgressBar
            ohos:id="$+id:progressbar"
            ohos:progress_width="10vp"
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:end_padding="10vp"
            ohos:start_padding="10vp"
            ohos:max="100"
            ohos:min="0"
            ohos:progress="60"
            ohos:progress_element="#FFF5D369"
            ohos:background_instruct_element="#FF6B6767"
            />
        <Image
            ohos:id="$+id:image_question"
            ohos:layout_alignment="horizontal_center"
            ohos:height="200vp"
            ohos:width="200vp"
            ohos:image_src="$media:banana"
            ohos:scale_mode="stretch"
            ohos:top_margin="10vp"
            />
        <DependentLayout
            ohos:height="200vp"
            ohos:width="match_parent"
            ohos:top_margin="10vp">
            <TextField
                ohos:id="$+id:text_field"

                ohos:height="80vp"
                ohos:width="300vp"
                ohos:center_in_parent="true"

                ohos:start_padding="24vp"
                ohos:end_padding="24vp"
                ohos:top_padding="8vp"

                ohos:text_size="40fp"
                ohos:hint="Enter a word"
                ohos:text_alignment="vertical_center|horizontal_center"
                ohos:multiple_lines="false"

                ohos:element_cursor_bubble="$graphic:ele_cursor_bubble"
                ohos:background_element="$graphic:background_text_field"
                />
            <Image
                ohos:id="$+id:flag"
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:end_of="$id:text_field"
                ohos:vertical_center="true"

                ohos:image_src="$media:right"
                ohos:clip_alignment="center"
                ohos:scale_mode="stretch"
                />
        </DependentLayout>
        <Button
            ohos:id="$+id:button_submit"
            ohos:layout_alignment="horizontal_center"
            ohos:width="200vp"
            ohos:height="60vp"
            ohos:text="$string:submit"

            ohos:text_size="19fp"
            ohos:text_color="#FF06000C"
            ohos:top_padding="8vp"
            ohos:bottom_padding="8vp"
            ohos:end_padding="70vp"
            ohos:start_padding="70vp"
            ohos:center_in_parent="true"
            ohos:align_parent_bottom="true"
            ohos:margin="20vp"
            ohos:background_element="$graphic:background_button"/>
    </DirectionalLayout>


</DirectionalLayout>