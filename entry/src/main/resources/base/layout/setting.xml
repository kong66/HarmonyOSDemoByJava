<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Button
        ohos:id="$+id:btnBack"
        ohos:width="match_content"
        ohos:height="40vp"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:align_parent_left="true"
        ohos:text="$string:button_back"
        ohos:text_size="19fp"
        ohos:text_weight="600"
        ohos:text_color="#FF06000C"
        ohos:top_padding="0vp"
        ohos:margin="5vp"
        />
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent">
        <ScrollView
            ohos:id="$+id:scroll"
            ohos:height="0vp"
            ohos:width="match_parent"
            ohos:weight="9"
            ohos:background_element="#FFBAF1ED"
            ohos:margin="10vp"
            >
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                >

               <DirectionalLayout
                   ohos:height="match_content"
                   ohos:width="match_parent"
                   ohos:orientation="horizontal"
                   ohos:margin="10vp"
                   >
                   <Text
                       ohos:height="60vp"
                       ohos:width="0vp"
                       ohos:weight="1"
                       ohos:text="Name"
                       ohos:text_size="20fp"
                       />
                   <TextField
                       ohos:id="$+id:text_name"
                       ohos:height="60vp"
                       ohos:width="0vp"
                       ohos:weight="1"

                       ohos:text_size="20fp"
                       ohos:text_color="#FF0C3969"
                       ohos:hint="Name"
                       ohos:hint_color="#FF244FCB"
                       ohos:text_alignment="vertical_center|horizontal_center"
                       ohos:multiple_lines="false"
                       ohos:element_cursor_bubble="$graphic:ele_cursor_bubble"
                       ohos:background_element="#FF918B8B"
                       />
               </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:margin="10vp"
                    >
                    <Text
                        ohos:height="60vp"
                        ohos:width="0vp"
                        ohos:weight="1"
                        ohos:text="Phone"
                        ohos:text_size="20fp"
                        />
                    <TextField
                        ohos:id="$+id:text_phone"
                        ohos:height="60vp"
                        ohos:width="0vp"
                        ohos:weight="1"

                        ohos:text_size="20fp"
                        ohos:text_color="#FF0C3969"
                        ohos:hint="Name"
                        ohos:hint_color="#FF244FCB"
                        ohos:text_alignment="vertical_center|horizontal_center"
                        ohos:multiple_lines="false"
                        ohos:element_cursor_bubble="$graphic:ele_cursor_bubble"
                        ohos:background_element="#FFDBD5D5"
                        />
                </DirectionalLayout>
                <RadioContainer
                    ohos:id="$+id:radio_gender"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:margin="5vp"
                    ohos:layout_alignment="horizontal_center"
                    ohos:orientation="horizontal"
                    >
                    <RadioButton
                        ohos:id="$+id:radio_button_female"
                        ohos:height="40vp"
                        ohos:width="60vp"
                        ohos:weight="1"
                        ohos:text="Female"
                        ohos:text_size="20fp"/>
                    <RadioButton
                        ohos:id="$+id:radio_button_male"
                        ohos:height="40vp"
                        ohos:width="60vp"
                        ohos:text="Male"
                        ohos:weight="1"
                        ohos:text_size="20fp"/>

                </RadioContainer>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:margin="10vp"
                    >
                    <Text
                        ohos:height="60vp"
                        ohos:width="0vp"
                        ohos:weight="3"
                        ohos:text="Occupation"
                        ohos:text_size="20fp"
                        />
                    <Picker
                        ohos:id="$+id:test_picker_occupation"
                        ohos:height="match_content"
                        ohos:width="20vp"
                        ohos:weight="1"
                        ohos:normal_text_size="23fp"
                        ohos:selected_text_size="30fp"
                        ohos:selected_normal_text_margin_ratio="3fp"
                        ohos:element_padding="30fp"

                        ohos:background_element="#E1FFFF"
                        ohos:layout_alignment="horizontal_center"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:margin="10vp"
                    >
                    <Text
                        ohos:height="60vp"
                        ohos:width="0vp"
                        ohos:weight="3"
                        ohos:text="Birthday"
                        ohos:text_size="20fp"
                        />
                    <DatePicker
                        ohos:id="$+id:date_pick"
                        ohos:height="match_content"
                        ohos:width="300vp"
                        ohos:text_size="20fp"

                        ohos:background_element="#C89FDEFF">
                    </DatePicker>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:margin="10vp"
                    >
                    <Text
                        ohos:height="60vp"
                        ohos:width="0vp"
                        ohos:weight="3"
                        ohos:text="Microphone permissions"
                        ohos:text_size="20fp"
                        />
                    <Switch
                        ohos:id="$+id:btn_switch_microphone"
                        ohos:height="match_content"
                        ohos:width="60vp"
                        ohos:layout_alignment="vertical_center"
                        />

                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:margin="10vp"
                    >
                    <Text
                        ohos:height="60vp"
                        ohos:width="0vp"
                        ohos:weight="3"
                        ohos:text="Camera permissions"
                        ohos:text_size="20fp"
                        />
                    <Switch
                        ohos:id="$+id:btn_switch_camera"
                        ohos:height="match_content"
                        ohos:width="60vp"
                        ohos:layout_alignment="vertical_center"
                        />

                </DirectionalLayout>

            </DirectionalLayout>
        </ScrollView>
        <Button
            ohos:id="$+id:button_submit"
            ohos:width="match_parent"
            ohos:height="0vp"
            ohos:weight="1"
            ohos:text="$string:save"
            ohos:text_size="19fp"
            ohos:text_color="#FF1C1C1A"
            ohos:text_weight="700"
            ohos:margin="10vp"
            ohos:background_element="#FF262422"/>
    </DirectionalLayout>


</DirectionalLayout>