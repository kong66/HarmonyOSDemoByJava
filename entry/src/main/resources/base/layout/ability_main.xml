<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:mainability_HelloWorld"
        ohos:text_size="40vp"
        />
    <Button
        ohos:id="$+id:btnDrag"
        ohos:width="200vp"
        ohos:height="50vp"
        ohos:text="$string:button_drag"
        ohos:text_size="25fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:margin="10vp"
        ohos:background_element="$graphic:background_button"/>
    <Button
        ohos:id="$+id:btnWebView"
        ohos:width="200vp"
        ohos:height="50vp"
        ohos:text="$string:button_webView"
        ohos:text_size="25fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:margin="10vp"
        ohos:background_element="$graphic:background_button"/>
    <Button
        ohos:id="$+id:btnFillInBlank"
        ohos:width="200vp"
        ohos:height="50vp"
        ohos:text="$string:fillInTheBlank"
        ohos:text_size="25fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:margin="10vp"
        ohos:background_element="$graphic:background_button"/>
    <Button
        ohos:id="$+id:btnChoiceQuestion"
        ohos:width="200vp"
        ohos:height="50vp"
        ohos:text="$string:choiceQuestion"
        ohos:text_size="25fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:margin="10vp"
        ohos:background_element="$graphic:background_button"/>
    <Button
        ohos:id="$+id:btnSlidePage"
        ohos:width="200vp"
        ohos:height="50vp"
        ohos:text="$string:slidePage"
        ohos:text_size="25fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="8vp"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:margin="10vp"
        ohos:background_element="$graphic:background_button"/>

</DirectionalLayout>