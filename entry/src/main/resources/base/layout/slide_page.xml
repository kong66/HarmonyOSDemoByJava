<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Button
        ohos:id="$+id:btnBack"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:align_parent_left="true"
        ohos:text="$string:button_back"
        ohos:text_size="19fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="0vp"
        ohos:bottom_padding="8vp"
        ohos:end_padding="70vp"
        ohos:start_padding="0vp"
        ohos:center_in_parent="true"
        ohos:margin="5vp"/>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent">
        <PageSlider
            ohos:id="$+id:page_slider"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="5"
            ohos:layout_alignment="horizontal_center"
            ohos:orientation="horizontal"
            ohos:page_cache_size="2"
            />
        <DirectionalLayout
            ohos:height="150vp"
            ohos:weight="2"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center|bottom"
            >
            <Text
                ohos:id="$+id:text_des"
                ohos:height="100vp"
                ohos:width="match_parent"
                ohos:weight="3"
                ohos:margin="5vp"

                ohos:background_element="#FFBAF3D8"
                ohos:text="story des"
                ohos:text_size="20vp"
                ohos:text_alignment="center"
                ohos:multiple_lines="true"
                />
            <Text
                ohos:id="$+id:text_page"
                ohos:height="50vp"
                ohos:width="match_parent"
                ohos:weight="1"
                ohos:margin="5vp"

                ohos:background_element="#FF70C4E7"
                ohos:text="1/N"
                ohos:text_size="20vp"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
    </DirectionalLayout>



</DirectionalLayout>