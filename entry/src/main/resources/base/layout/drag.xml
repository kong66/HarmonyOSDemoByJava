<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <Button
        ohos:id="$+id:btnBack"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:align_parent_left="true"
        ohos:text="$string:button_back"
        ohos:text_size="19fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="0vp"
        ohos:bottom_padding="8vp"
        ohos:right_padding="70vp"
        ohos:left_padding="0vp"
        ohos:center_in_parent="true"
        ohos:margin="5vp"/>

    <DependentLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:top_margin="10vp">



        <DirectionalLayout
            ohos:id="$+id:options"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:below="$id:text_drag"
            >
            <DependentLayout
                ohos:height="150vp"
                ohos:width="match_parent">
                <Image
                    ohos:id="$+id:image1"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:apple"
                    ohos:margin="20"
                    ohos:background_element="$graphic:background_image_option"
                    />
                <Image
                    ohos:id="$+id:flag1"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:right_of="$id:image1"
                    ohos:vertical_center="true"
                    ohos:image_src="$media:right"
                    ohos:margin="20"
                    ohos:clip_alignment="center"
                    ohos:scale_mode="inside"
                    />
                <Text
                    ohos:id="$+id:answer1"
                    ohos:height="0"
                    ohos:width="0"
                    ohos:text="Apple"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="150vp"
                ohos:width="match_parent">
                <Image
                    ohos:id="$+id:image2"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:pear"
                    ohos:margin="20"
                    ohos:background_element="$graphic:background_image_option"
                    />
                <Image
                    ohos:id="$+id:flag2"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:right_of="$id:image2"
                    ohos:vertical_center="true"
                    ohos:image_src="$media:right"
                    ohos:margin="20"
                    ohos:clip_alignment="center"
                    ohos:scale_mode="inside"
                    />
                <Text
                    ohos:id="$+id:answer2"
                    ohos:height="0"
                    ohos:width="0"
                    ohos:text="Pear"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="150vp"
                ohos:width="match_parent">
                <Image
                    ohos:id="$+id:image3"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:center_in_parent="true"
                    ohos:image_src="$media:banana"
                    ohos:margin="20"
                    ohos:background_element="$graphic:background_image_option"
                    />
                <Image
                    ohos:id="$+id:flag3"
                    ohos:height="100vp"
                    ohos:width="100vp"
                    ohos:right_of="$id:image3"
                    ohos:vertical_center="true"
                    ohos:image_src="$media:right"
                    ohos:margin="20"
                    ohos:clip_alignment="center"
                    ohos:scale_mode="inside"
                    />
                <Text
                    ohos:id="$+id:answer3"
                    ohos:height="0"
                    ohos:width="0"
                    ohos:text="Banana"/>
            </DependentLayout>

        </DirectionalLayout>
        <Text
            ohos:id="$+id:text_drag"
            ohos:width="200vp"
            ohos:height="80vp"
            ohos:align_parent_top="true"
            ohos:horizontal_center="true"
            ohos:text_alignment="horizontal_center|vertical_center"
            ohos:text_color="#FFE5CA20"
            ohos:text_size="100"
            ohos:background_element="$graphic:background_text_drag"
            ohos:text="Apple"

            ohos:italic="true"
            ohos:text_weight="800"
            ohos:text_font="serif"
            ohos:top_margin="20vp"
            ohos:right_padding="8vp"
            ohos:left_padding="8vp"
            />
        <Button
            ohos:id="$+id:btnReset"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:button_reset"
            ohos:text_size="19fp"
            ohos:text_color="#FF06000C"
            ohos:top_padding="8vp"
            ohos:bottom_padding="8vp"
            ohos:end_padding="70vp"
            ohos:start_padding="70vp"
            ohos:center_in_parent="true"
            ohos:align_parent_bottom="true"
            ohos:margin="10vp"
            ohos:background_element="$graphic:background_button"/>

    </DependentLayout>

</DirectionalLayout>