<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Button
        ohos:id="$+id:btnBack"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:align_parent_left="true"
        ohos:text="$string:button_back"
        ohos:text_size="19fp"
        ohos:text_color="#FF06000C"
        ohos:top_padding="0vp"
        ohos:bottom_padding="8vp"
        ohos:end_padding="70vp"
        ohos:start_padding="0vp"
        ohos:center_in_parent="true"
        ohos:margin="5vp"/>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent">
        <Image
            ohos:id="$+id:image_question"
            ohos:layout_alignment="horizontal_center"
            ohos:height="200vp"
            ohos:width="200vp"
            ohos:image_src="$media:banana"
            ohos:scale_mode="stretch"
            ohos:top_margin="10vp"
            />
        <DirectionalLayout
            ohos:height="450vp"
            ohos:width="match_parent"
            >
            <Checkbox
                ohos:id="$+id:check_box_1"
                ohos:layout_alignment="horizontal_center"
                ohos:top_margin="40vp"
                ohos:height="60vp"
                ohos:width="300vp"

                ohos:text="Apples"
                ohos:text_alignment="center"
                ohos:text_size="30fp"
                ohos:text_weight="500"
                ohos:text_color_on="#FF63F6D8"
                ohos:text_color_off="#000000"
                ohos:background_element="#FFCEEE96"
                ohos:check_element="$graphic:checkbox_check_element"
                />

            <Checkbox
                ohos:id="$+id:check_box_2"
                ohos:layout_alignment="horizontal_center"
                ohos:height="60vp"
                ohos:width="300vp"
                ohos:top_margin="40vp"

                ohos:text="Bananas"
                ohos:text_size="30fp"
                ohos:text_weight="500"
                ohos:text_alignment="center"
                ohos:text_color_on="#FF63F6D8"
                ohos:text_color_off="#000000"
                ohos:background_element="#FFCEEE96"
                ohos:check_element="$graphic:checkbox_check_element"
                />

            <Checkbox
                ohos:id="$+id:check_box_3"
                ohos:layout_alignment="horizontal_center"
                ohos:height="60vp"
                ohos:width="300vp"
                ohos:top_margin="40vp"

                ohos:text="Strawberries"
                ohos:text_alignment="center"
                ohos:text_size="30fp"
                ohos:text_weight="500"
                ohos:text_color_on="#FF63F6D8"
                ohos:text_color_off="#000000"
                ohos:background_element="#FFCEEE96"
                ohos:check_element="$graphic:checkbox_check_element"
                />

            <Checkbox
                ohos:id="$+id:check_box_4"
                ohos:layout_alignment="horizontal_center"
                ohos:height="60vp"
                ohos:width="300vp"
                ohos:top_margin="40vp"

                ohos:text="Pear"
                ohos:text_alignment="center"
                ohos:text_size="30fp"
                ohos:text_weight="500"
                ohos:text_color_on="#FF63F6D8"
                ohos:text_color_off="black"
                ohos:background_element="#FFCEEE96"
                ohos:check_element="$graphic:checkbox_check_element"
                />
        </DirectionalLayout>
        <Button
            ohos:id="$+id:button_ok"
            ohos:layout_alignment="horizontal_center"
            ohos:width="200vp"
            ohos:height="60vp"
            ohos:text="$string:submit"

            ohos:text_size="19fp"
            ohos:text_color="#FF06000C"
            ohos:top_padding="8vp"
            ohos:bottom_padding="8vp"
            ohos:end_padding="70vp"
            ohos:start_padding="70vp"
            ohos:center_in_parent="true"
            ohos:align_parent_bottom="true"
            ohos:margin="20vp"
            ohos:background_element="$graphic:background_button"/>
    </DirectionalLayout>
</DirectionalLayout>